<%- include('../partials/head')%>
  </head>

  <body class="bg-gray-50">
    <%- include('../partials/nav')%>
      <main class="container mx-auto mt-12 p-8 bg-white rounded-lg shadow-lg">
        <h1 class="text-4xl font-extrabold mb-8 text-center text-red-500">
          <%= editMode ? 'Edit' : 'Register' %> Your Home on AirBnB
        </h1>
        <form action="<%=editMode ? '/host/edit-home' : '/host/addHome' %>" method="POST" enctype="multipart/form-data"
          class="max-w-lg mx-auto space-y-6">
          <div>
            <input type="text" name="houseName" value="<%= editMode ? home.houseName : '' %>"
              placeholder="Enter your House Name"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
          </div>
          <div>
            <input type="text" name="price" value="<%= editMode ? home.price : '' %>"
              placeholder="Enter price per night"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
          </div>
          <div>
            <input type="text" name="location" value="<%= editMode ? home.location : '' %>" placeholder="Enter Location"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
          </div>
          <div>
            <input type="text" name="rating" value="<%= editMode ? home.rating : '' %>"
              placeholder="Enter Rating out of 5"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
          </div>
          <div>
            <input type="file" name="photo" accept="image/*"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
          </div>
          <div>
            <textarea name="description" placeholder="Enter Description"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"><%= editMode ? home.description : '' %></textarea>
          </div>
          <div>
            <input type="submit" value="<%= editMode ? 'Update' : 'Register' %>"
              class="w-full px-4 py-3 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-300" />
          </div>
          <input type="hidden" name="homeId" value="<%= editMode ? home._id : '' %>">
        </form>
      </main>
  </body>

  </html>