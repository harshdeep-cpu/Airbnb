<%- include('../partials/head')%>
  </head>

  <body class="bg-gray-50 font-sans">

    <%- include('../partials/nav')%>

      <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
        <h2 class="text-4xl text-red-500 font-extrabold text-center mb-8">
          <%= registerdHomes.length===0 ? "There are no Registered Homes" : "Host Homes" %>
        </h2>

        <!-- Responsive grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          <% if (registerdHomes.length !==0) { %>
            <% registerdHomes.forEach(home=> { %>
              <!-- Card -->
              <div
                class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition duration-300 transform hover:-translate-y-1">
                <img class="h-48 w-full object-cover" src="<%= home.photo %>" alt="<%= home.houseName %>">
                <div class="p-5">
                  <h3 class="text-xl font-bold text-gray-800 mb-3">
                    <%= home.houseName %>
                  </h3>
                  <p class="text-gray-600 mb-2">
                    <span class="font-medium">Location:</span>
                    <%= home.location %>
                  </p>
                  <p class="text-gray-600 mb-2">
                    <span class="font-medium">Price:</span> ₹<%= home.price %>
                  </p>
                  <p class="text-gray-600 mb-4">
                    <span class="font-medium">Rating:</span>
                    <%= home.rating %> ⭐
                  </p>
                  <div class="flex justify-between items-center">
                    <a href="/host/edit-home/<%= home._id %>?edit=true">
                      <button
                        class="bg-blue-500 rounded-lg text-white font-bold py-2 px-4 hover:bg-blue-600 cursor-pointer transition duration-300">
                        Edit
                      </button>
                    </a>
                    <form action="/host/delete-home/<%= home._id %>" method="POST">
                      <button
                        class="bg-red-500 rounded-lg text-white font-bold py-2 px-4 hover:bg-red-600 cursor-pointer transition duration-300">
                        Delete
                      </button>
                    </form>
                  </div>
                </div>
              </div>
              <% }) %>
                <% } %>
        </div>
      </main>

  </body>

  </html>