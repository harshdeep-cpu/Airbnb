<%- include('../partials/head')%>
  </head>

  <body>
    <%- include('../partials/nav')%>
      <main class="container text-center mx-auto mt-8 p-8 bg-gray-100 rounded-lg shadow-md">
        <h1 class="text-3xl font-bold mb-6 text-center text-gray-900">Register Your Home on AirBnB</h1>
        <form action="/addHome" method="POST" class="max-w-md mx-auto">
          <input type="text" name="houseName" placeholder="Enter your House Name"
            class="w-full text-center px-4 py-2 mt-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" /><br><br>
          <input type="text" name="price" placeholder="Enter price per night"
            class="w-full text-center px-4 py-2 mt-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" /><br><br>
          <input type="text" name="location" placeholder="Enter Location"
            class="w-full text-center px-4 py-2 mt-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" /><br><br>
          <input type="text" name="rating" placeholder="Enter Rating out of 5"
            class="w-full text-center px-4 py-2 mt-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" /><br><br>
          <input type="text" name="photoUrl" placeholder="Enter Photo URL"
            class="w-full text-center px-4 py-2 mt-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" /><br><br>

          <input type="submit" value="Submit"
            class="w-full px-4 py-2 bg-red-500 text-white rounded-md hover:bg-blue-600 transition duration-300" />
        </form>
      </main>
  </body>

  </html>