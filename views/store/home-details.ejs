<%- include('../partials/head')%>
  </head>

  <body class="bg-gray-50 font-sans">

    <%- include('../partials/nav')%>

      <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
        <h2 class="text-4xl text-red-500 font-extrabold text-center mb-8">
          Details of: <%= home.houseName %>
        </h2>
        <div
          class="bg-white rounded-lg shadow-lg overflow-hidden transition duration-300 w-full h-[60vh] mt-10 mb-10 flex hover:shadow-xl">
          <img class="w-1/2 h-full object-cover rounded-l-lg" src="<%= home.photo %>" alt="<%= home.houseName %>">
          <div class="w-1/2 h-full p-8 flex flex-col justify-between">
            <div>
              <h3 class="text-3xl font-bold text-gray-800 mb-6 border-b-2 pb-4">
                <%= home.houseName %>
              </h3>
              <p class="text-gray-700 mb-4 text-lg">Location: <span class="font-semibold text-gray-900">
                  <%= home.location %>
                </span></p>
              <p class="text-gray-700 mb-4 text-lg">Price: <span class="font-semibold text-green-600">₹<%= home.price %>
                </span></p>
              <p class="text-gray-700 mb-4 text-lg">Rating: <span class="font-semibold text-yellow-500">
                  <%= home.rating %> ⭐
                </span></p>
              <p class="text-gray-700 text-lg">Description: <span class="font-semibold text-yellow-500">
                  <%= home.description %>
                </span></p>
              <div class="flex justify-between items-center mt-4">
                <%- include('../partials/favourite')%>
                  <form action="/bookNow/<%=home._id%>" method="POST" class="inline">
                    <button
                      class="bg-green-500 text-white font-bold py-2 px-6 rounded-lg hover:bg-green-700 transition duration-300 cursor-pointer">
                      Book Now
                    </button>
                  </form>
              </div>
            </div>
          </div>
        </div>
      </main>

  </body>

  </html>